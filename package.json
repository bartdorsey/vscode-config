{
  "name": "vscode-config",
  "displayName": "My Personal VSCode Config",
  "description": "Configure VSCode settings",
  "version": "0.0.5",
  "publisher": "bartdorsey",
  "repository": {
    "type": "git",
    "url": "https://github.com/bartdorsey/vscode-config.git"
  },
  "bugs": {
    "url": "https://github.com/bartdorsey/vscode-config/issues"
  },
  "homepage": "https://github.com/bartdorsey/vscode-config#readme",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "contributes": {
    "commands": [
      {
        "command": "bartdorsey.configureSettings",
        "title": "Configure Default Settings"
      },
      {
        "command": "bartdorsey.enableCopilot",
        "title": "Enable GitHub Copilot"
      },
      {
        "command": "bartdorsey.disableCopilot",
        "title": "Disable GitHub Copilot"
      },
      {
        "command": "bartdorsey.cleanup",
        "title": "Cleanup (Uninstall Extensions & Revert Settings)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run bundle",
    "compile": "tsc -p ./",
    "bundle": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --target=node18 --minify",
    "watch": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --target=node18 --watch",
    "clean": "rm -rf out *.vsix",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "install-local": "pnpm run package && code --install-extension vscode-config-*.vsix",
    "version:patch": "pnpm run lint && pnpm run bundle && npm version patch",
    "version:minor": "pnpm run lint && pnpm run bundle && npm version minor",
    "version:major": "pnpm run lint && pnpm run bundle && npm version major",
    "version:prerelease": "pnpm run lint && pnpm run bundle && npm version prerelease",
    "release": "pnpm run lint && pnpm run bundle && pnpm run package"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/vscode": "^1.108.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
